@charset "utf-8";
/* CSS Document */

.MyPlayerControl{
	width:100%;
	height:100%;
	padding:0;
	margin:0;
	display: inline-block;
	vertical-align: middle;
}

/* 50px */
.MyPlayerButton {
	width: 50px;
	height: 100%;
}

.MyPlayerButtonClose, .MyPlayerButtonPlayPause {
    top: -2px;
	width: 20px;
	height: 20px;
	border-radius:10px;
	-moz-border-radius:10px;
	-webkit-border-radius:10px;
	background: #3498DB;
	opacity: 0.9;
	margin-top: 1px;
	margin-left: 1px;
	z-index:2;
	cursor:pointer;
	display: inline-block;
	transform: scale(0.8);
    text-align: center;
    line-height: 18px;
}

.MyPlayerButtonClose {
	border-radius:3px;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	opacity: 0.75;
	transform: scale(0.7);
}

/* 100% - 50px */
.BarControl{
	width:calc(100% - 50px);
	height:100%;
	padding:0;
	margin:0;
	display:inline-block;
	float: right;
}


/* 40px */
.BarBeginTime{
	width:40px;
	height:20px;
	color:#888;
	font-size:11px;
	line-height:20px;

	margin-left: 2px;
}
.TheBar{
	position: relative;
	width:calc(100% - 100px);
	margin-left:2px;
	height:4px;
	border-radius:2px;
	-webkit-border-radius:2px;
	-moz-border-radius:2px;
	background:#EBE8E8;
	overflow:visible;
}
.TheColorBar{
	width:0px;
	border-radius:0px;
	-webkit-border-radius:0px;
	-moz-border-radius:0px;
	height:100%;
	background:#3498DB;
	float:left;
}
.TimeBall{
	width:10px;
	height:10px;
	border-radius:5px;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
	background:#3498DB;
	position:absolute;
	left:0px;
	top:-3px;
	z-index:2;
	cursor:pointer;
}
.BarTimeBall{
	width:10px;
	height:10px;
	border-radius:5px;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
	background:#3498DB;
	position:absolute;
	left:0px;
	top:-3px;
	z-index:2;
	cursor:pointer;
}
/* 40px */
.BarFinishTime{
	width:40px;
	height:20px;
	color:#888;
	font-size:11px;
	line-height:20px;

	margin-left: 3px;
}
.BarBeginTime,.BarFinishTime,.TheBar, .MyPlayerButton {
	display:inline-block;
	vertical-align:middle;
	padding:0px;
}
